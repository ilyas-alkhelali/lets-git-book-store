@model Lets.Models.Book
@{
    ViewBag.Title = "Редактирование книги";
}
<form asp-action="edit" asp-controller="admin" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Имя</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label">Возраст</label>
        <input type="text" asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="img" class="control-label">Путь к картинке</label>
        <input type="text" asp-for="img" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pages" class="control-label">Страниц</label>
        <input type="number" asp-for="Pages" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Publication" class="control-label">Дата выпуска</label>
        <input type="date" asp-for="Publication" class="form-control" />
    </div>
  

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>